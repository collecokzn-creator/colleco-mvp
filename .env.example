# Frontend public URL (used for links and metadata)
VITE_PUBLIC_SITE_URL=https://www.travelcolleco.com
# Public contact email displayed on site
VITE_CONTACT_EMAIL=collecotravel@gmail.com

# Optional: API base if frontend and backend are separate
VITE_API_BASE=http://localhost:4000

# Google Maps API key for live map tracking (transfer service)
# Get from: https://console.cloud.google.com/apis/credentials
# Step 1: Create API key with these APIs enabled:
#   - Maps JavaScript API
#   - Places API
#   - Directions API
#   - Distance Matrix API
#   - Geocoding API
# Step 2: Set HTTP referrers (Application restrictions):
#   - http://localhost:5180/*  (local development)
#   - http://127.0.0.1:5180/*  (local loopback)
#   - https://collecokzn-creator.github.io/colleco-mvp/*  (production)
# Step 3: (Optional) Set quota limits to prevent abuse
# IMPORTANT: Never commit the actual key! Use GitHub Secrets for CI/CD
VITE_GOOGLE_MAPS_API_KEY=<YOUR_GOOGLE_MAPS_API_KEY>

# Optional: Server auth token for protected endpoints (leave empty to disable)
API_TOKEN=

# Optional: SMTP settings for sending contact form emails
SMTP_HOST=smtp.your-mail-host.com
SMTP_PORT=587
SMTP_SECURE=0
SMTP_USER=postmaster@your-domain.com
SMTP_PASS=your-strong-password
