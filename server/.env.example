# Example environment for server/server.js

# Core
NODE_ENV=development
PORT=4000

# Auth (set in production!)
API_TOKEN=change-me

# CORS: comma-separated list of allowed origins
# Use loopback IP to avoid hostname resolution differences in CI (127.0.0.1)
ALLOWED_ORIGINS=http://127.0.0.1:5173

# AI analytics logging (0=disable, 1=enable)
AI_ANALYTICS=0

# Document Verification Service
# Recommended: 'hybrid' for cost-effective multi-tier verification
# Options: hybrid, azure, cipc, smile, mock, onfido, trulioo
# Costs: hybrid=R7.39/partner, azure=R0.19/partner, cipc=FREE, smile=R36/check
VERIFICATION_PROVIDER=hybrid

# Azure Cognitive Services (RECOMMENDED - R0.027/doc)
# Get free R200 credits: https://azure.microsoft.com/free/
AZURE_FORM_RECOGNIZER_KEY=
AZURE_FORM_RECOGNIZER_ENDPOINT=

# CIPC API (FREE - SA Business Registry)
# Apply for access: Email CIPCCCentre@cipc.co.za
# Processing time: 2-4 weeks
CIPC_API_KEY=
CIPC_API_URL=https://eservices.cipc.co.za/api

# Smile Identity (OPTIONAL - R36/check for flagged cases)
# Africa-focused, better SA ID recognition than Onfido
# Sign up: https://www.smileidentity.com/
SMILE_PARTNER_ID=
SMILE_API_KEY=
SMILE_SID_SERVER=https://api.smileidentity.com/v1

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=0
SMTP_USER=
SMTP_PASS=
CONTACT_TO=
CONTACT_FROM=

# Events providers (optional)
TICKETMASTER_API_KEY=
SEATGEEK_CLIENT_ID=

# Siteminder (hotel partner) — set when going live
SITEMINDER_USE_MOCK=1
SITEMINDER_API_URL=
SITEMINDER_API_KEY=
SITEMINDER_OAUTH_CLIENT_ID=
SITEMINDER_OAUTH_CLIENT_SECRET=
SITEMINDER_MERCHANT_ID=
SITEMINDER_WEBHOOK_SECRET=

# PayFast (primary payment processor) — apply at payfast.co.za
PAYFAST_MERCHANT_ID=
PAYFAST_MERCHANT_KEY=
PAYFAST_PASSPHRASE=
# Use sandbox mode until merchant account is live
PAYFAST_SANDBOX=1

# Yoco (secondary payment processor) — apply at yoco.com
YOCO_SECRET_KEY=
YOCO_PUBLIC_KEY=
# Use test mode until merchant account is live
YOCO_TEST_MODE=1
# Optional: webhook secret used to verify X-Yoco-Signature headers
YOCO_WEBHOOK_SECRET=
# Optional: override Yoco API base URL (default: https://online.yoco.com/api/v1)
YOCO_API_URL=https://online.yoco.com/api/v1
